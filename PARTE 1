using System;
using System.IO.Ports;
public class Program
{
    static char [,] datos=new Char[3,3];
    static SerialPort Arduino=new SerialPort("COM5",9600);
    public static void Main()
    {
        int num;
        Arduino.Open();
        Console.WriteLine("A continuacion escoja la accion que desea llevar a cabo");
        Console.WriteLine("1. Encender LED color rojo");
        Console.WriteLine("2. Encender LED color naranja");
        Console.WriteLine("3. Apagar LED color rojo");
        Console.WriteLine("4. Apagar LED color naranja");
        Console.WriteLine("5. Salir");
        num = Convert.ToInt32(Console.ReadLine());
        if(num==1)
        {
            Console.WriteLine("Com abierto");
            byte[]data = Encoding.ASCII.GetBytes("z");
            Arduino.Write(data, 0, data.Length);
            
        }
        else if(num==2)
        {
            Console.WriteLine("Com cerrado");
            byte[]data = Encoding.ASCII.GetBytes("i");
            Arduino.Write(data, 0, data.Length);    
        }
    
        if(num==3) 
        {
        Console.WriteLine("Com abierto");
        byte[]data = Encoding.ASCII.GetBytes("p");
        Arduino.Write(data, 0, data.Length);
            
        }
        else if(num==4)
        {
        Console.WriteLine("Com cerrado");
        byte[]data = Encoding.ASCII.GetBytes("l");
        Arduino.Write(data, 0, data.Length);    
        }
	if(num==5)
	{
	Console.Clear();
	break;
	}
    }
}
		
